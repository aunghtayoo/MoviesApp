<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">@dimen/margin_zero</item>
        <item name="android:popupElevation">@dimen/margin_zero</item>
        <item name="android:windowElevation">@dimen/margin_zero</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:elevation">@dimen/margin_zero</item>
        <item name="android:popupElevation">@dimen/margin_zero</item>
        <item name="android:windowElevation">@dimen/margin_zero</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabTextColor">@color/color_white</item>
        <item name="tabIndicatorColor">@color/color_white</item>
        <item name="tabRippleColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NowShowing" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.MovieName" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_heading_1x</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.MovieInfo" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_secondary_text</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.MovieInfo.Digit" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_heading_1x</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/color_white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/margin_medium_2</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:radius">@dimen/margin_medium_2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:theme">@style/Theme.MaterialComponents</item>
    </style>

</resources>